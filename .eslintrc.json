{
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "experimentalObjectRestSpread": true
    },
    "rules": {
        "no-console": 0,
        "multiline-ternary": 2,
        "indent": [
            "warn",
            4,
            {
                "ignoredNodes": [
                    ":statement > ConditionalExpression",
                    "ConditionalExpression"
                ]
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
